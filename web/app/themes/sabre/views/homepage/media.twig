<div class="title-strap" id="media">
    <h2 class="text-uppercase"><a class="anchor" name="media">Media</a></h2>
</div>


<div id="homepage-media-slider">
    <ul class="slides">
        {% set magazineCoverImages = homePage.types('magazine-cover-image') %}
        {% for magazineCoverImage in magazineCoverImages %}
        <li>
            <div class="cover-image-wrapper">
                <img src="{{ magazineCoverImage }}" data-overleaf="{{ homePage.types('magazine-overleaf-image')[loop.index-1] }}" />
            </div>
            <div class="caption-wrap">
                <div class="caption">{{ homePage.types('magazine-slide-caption')[loop.index-1] }}</div>
            </div>
        </li>
        {% endfor %}
    </ul>
</div>
