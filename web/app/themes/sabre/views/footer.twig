<footer class="content-info" role="contentinfo">
    <div class="container">
        <div id="footer-content">
            <div class="row">
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-12">
                            <img src="{{ header_image }}" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <address>
                                <strong>{{ address['address-1-country'] }}</strong><br>
                                {{ address['address-1-address-line-1'] }}<br>
                                {{ address['address-1-address-line-2'] }}<br>
                                <abbr title="Phone">P:</abbr> {{ address['address-1-telephone'] }}
                            </address>
                        </div>
                        <div class="col-sm-6">
                            <address>
                                <strong>{{ address['address-2-country'] }}</strong><br>
                                {{ address['address-2-address-line-1'] }}<br>
                                {{ address['address-2-address-line-2'] }}<br>
                                <abbr title="Phone">P:</abbr> {{ address['address-2-telephone'] }}
                            </address>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-6">
                            <h4>Our Brands</h4>
                            <ul class="list-unstyled">
                                {% for brand in brands %}
                                <li>{{ brand.title }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="col-sm-6">
                            <div class="row">
                                <h4>Education</h4>
                                <ul class="list-unstyled">
                                    <li>{{ meet_the_team.title }}</li>
                                </ul>
                            </div>
                            <div class="row">
                                <h4>Help & support</h4>
                                <ul class="list-unstyled">
                                    {% for helper_page in helper_pages %}
                                    <li>{{ helper_page.title }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
