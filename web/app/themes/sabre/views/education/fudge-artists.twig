<div class="educators">
    <h2>Guest artists for Fudge</h2>
    {% for fudge_artist in fudge_artists %}
    <div class="educator">
        <div class="row">
            <div class="col-sm-3">
                <div class="headshot">
                    <img src="{{ fudge_artist.thumbnail.src|resize(165, 225) }}" class="post-thumb"/>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="description">
                    {{ fudge_artist }}
                </div>
            </div>
            <div class="col-sm-3">
                <div class="favourite-product">
                    <img class="img-responsive" src="{{ fudge_artist.types('favourite-product') }}" />
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>