    <div class="row reduced-padding bottom">
        <div class="col-xs-8 brand-slider">
            <div class="brand-aside-content">
                <h1>{{ page.title }}</h1>
                {{ page.content }}
            </div>
        </div>
        <div class="col-xs-4 brand-aside">
            <div class="flexslider brand-products">
                <ul class="slides">
                    {% set products = page.types('featured-brand-product') %}
                    {% for product in products %}
                    <li>
                        <img src="{{ product|resize(500) }}" />
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>